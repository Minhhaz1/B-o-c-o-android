<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thông tin"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Loại tin" />

            <RadioGroup
                android:id="@+id/radioGroupLoaiTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioChoThue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cho thuê"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="center"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="8dp" />

                <RadioButton
                    android:id="@+id/radioTimNguoiOGhep"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm người ở ghép"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textVie3w4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Loại phòng" />


            <RadioGroup
                android:id="@+id/radioGroupLoaiPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rdoPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:checked="true"
                    android:gravity="center"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="8dp" />

                <RadioButton
                    android:id="@+id/rdoCanHo"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Căn hộ"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp" />
                <RadioButton
                    android:id="@+id/rdoCanHoMini"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Căn hộ Mini"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp" />
                <RadioButton
                    android:id="@+id/rdoNguyenCan"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyên căn"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="8dp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giá phòng (VND)" />

                    <EditText
                        android:id="@+id/edPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/edittext_border"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                    android:text="Diện tích (m2)" />

                    <EditText
                        android:id="@+id/edDienTich"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:background="@drawable/edittext_border" />
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chọn tiện ích của phòng" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:layout_marginTop="16dp"
                    >

                    <!-- Tiện ích 1 -->
                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wifi"
                        android:layout_columnSpan="1"
                        android:padding="8dp"
                         />

                    <!-- Tiện ích 2 -->
                    <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WC riêng"
                        android:layout_columnSpan="1"
                        android:padding="3dp"
                         />

                    <!-- Tiện ích 3 -->
                    <CheckBox
                        android:id="@+id/checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giữ xe"
                        android:layout_columnSpan="1"
                        android:padding="3dp"
                         />

                    <!-- Tiện ích 4 -->
                    <CheckBox
                        android:id="@+id/checkbox4"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tự do"
                        android:layout_columnSpan="1"
                         />

                    <!-- Tiện ích 5 -->
                    <CheckBox
                        android:id="@+id/checkbox5"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bếp"
                        android:layout_columnSpan="1"
                         />

                    <!-- Tiện ích 6 -->
                    <CheckBox
                        android:id="@+id/checkbox6"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điều hòa"
                        android:layout_columnSpan="1"
                         />

                    <!-- Tiện ích 7 -->
                    <CheckBox
                        android:id="@+id/checkbox7"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tủ lạnh"
                        android:layout_columnSpan="1"
                         />

                    <!-- Tiện ích 8 -->
                    <CheckBox
                        android:id="@+id/checkbox8"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Máy giặt"
                        android:layout_columnSpan="1"
                         />
                </GridLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:text="Tỉnh/ Thành phố" />

            <EditText
                android:id="@+id/edTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Quận/Huyện" />

            <EditText
                android:id="@+id/edHuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="8dp"

                android:textColor="@android:color/black"
                android:text="Phường/Xã" />

            <EditText
                android:id="@+id/edPhuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:inputType="textPersonName"
               />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Số nhà, tên đường" />

            <EditText
                android:id="@+id/edNha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/tvThemAnh"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Thêm ảnh" />
            <GridLayout
                android:id="@+id/image_grid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"
                android:columnCount="3"
                android:rowCount="2"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/border">
            </GridLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Tiêu đề bài đăng" />

            <EditText
                android:id="@+id/edTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:inputType="textPersonName"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Liên hệ với chủ" />

            <EditText
                android:id="@+id/edLienHe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Số điện thoại" />

            <EditText
                android:id="@+id/edSdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border" />
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Mô tả" />

            <EditText
                android:id="@+id/edMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Đăng" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>